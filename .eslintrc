{
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "extends": "airbnb",
  "rules": {
    "default-case": 0,
    "no-param-reassign": 0,
    "no-underscore-dangle": 0,
    "max-len": ["error", {"code": 80, "comments": 82}],
    "no-named-as-default": 0,
    "no-use-before-define": 0,
    "no-constant-condition": 0,
    "import/no-named-as-default": 0,
    "import/prefer-default-export": 0,
    "no-bitwise": 0,
    "no-mixed-operators": 0,
    "no-plusplus": ["error", {"allowForLoopAfterthoughts": true}],
    "semi": ["error", "never"],
    "quote-props": 0,
    "global-require": 0,
    "no-undef": 0,
  },
  "plugins": [
    "react"
  ]
}
